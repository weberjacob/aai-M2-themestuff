{
  "name": "luma-child",
  "description": "A subtheme of Magento/luma.",
  "browserSync": {
    "enabled" : true,
    "proxy" : "http://localhost",
    "port" : 3000,
    "openAutomatically" : false,
    "notify" : false
  },
  "css": {
    "dest": "./web/css",
    "src": [
      "styles/**/*.scss"
    ]
  },
  "js": {
    "dest": "assets/js",
    "src": [
      "js/**/*.js"
    ],
    "vendorDest": "assets/js/vendor"
  }
}
