{
  "name": "ash",
  "description": "A theme based on Cyle.",
  "browserSync": {
    "enabled" : true,
    "proxy" : "http://localhost",
    "port" : 3000,
    "openAutomatically" : false,
    "notify" : false
  },
  "css": {
    "dest": "assets/css",
    "src": [
      "styles/**/*.scss"
    ]
  },
  "js": {
    "dest": "assets/js",
    "src": [
      "js/**/*.js"
    ],
    "vendorDest": "assets/js/vendor"
  },
  "images": {
    "src": [
      "assets/images/**/*"
    ],
    "dest": "assets/images/"
  }
}
